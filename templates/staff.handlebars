{{#each staff}}
  <div class="staff-item col-md-6 col-lg-4 pb-2 pb-md-3">
    <a class="staff-select" data-target="{{staffNameFirst}}">
      <img class="img-thumbnail" src="{{imgThumbSource}}" alt="{{staffNameFirst}}">
    </a>
    <div class="pt-1 pl-1">
      <div class="blue-header">
        <a class="staff-select" data-target="{{staffNameFirst}}">{{staffNameFull}}</a>
      </div>
      <div class="gray-subheader text-uppercase">
        {{staffTitle}}
      </div>
    </div>
  </div>
{{/each}}
