{{#each staff}}
  <div class="staff-item col-md-6 col-lg-4 pb-2 pb-md-3">
    <a class="staff-select" data-target="{{staff-name-first}}">
      <img class="img-thumbnail" src="images/staff/{{staff-name-first}}-2x1-thumb.png" alt="{{staff-name-first}}">
    </a>
    <div class="pt-1 pl-1">
      <div class="blue-header">
        <a class="staff-select" data-target="{{staff-name-first}}">{{staff-name-full}}</a>
      </div>
      <div class="gray-subheader text-uppercase">
        {{staff-title}}
      </div>
    </div>
  </div>
{{/each}}
